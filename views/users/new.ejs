<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

	<div class="col-lg-3">
		<span></span>
	</div>
	
	<div class="col-lg-6">
		<div class="container">
				<div class="card-box">
					<div class="row">
						<form class="user-form form-horizontal-center" action="/users" method="post">
								<div class="container-center-login">
									<h4 class="m-t-0 header-title"><b>Register New User</b></h4>
								</div>
								
								<div class="container-center-login">
									<div class="card-box">
											
										<div class="form-group <%= (errors.name)?'has-error':'' %>">
										  <label style="color:#333333" for="name" >Name*</label>

											<input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
											<% if(errors.name){ %>
											  <span class="help-block"><%= errors.name.message %></span>
											<% } %>

										</div>

										<div class="form-group <%= (errors.email)?'has-error':'' %>">
										  <label style="color:#333333" for="email" >Email</label>

											<input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
											<% if(errors.email){ %>
											  <span class="help-block"><%= errors.email.message %></span>
											<% } %>

										</div>

										<div class="form-group <%= (errors.password)?'has-error':'' %>">
										  <label style="color:#333333" for="password" >Password*</label>

											<input class="form-control" type="password" id="password" name="password" value="">
											<% if(errors.password){ %>
											  <span class="help-block"><%= errors.password.message %></span>
											<% } %>

										</div>

										<div class="form-group <%= (errors.passwordConfirmation)?'has-error':'' %>">
										  <label style="color:#333333" for="passwordConfirmation" >Confirm Password*</label>

											<input class="form-control" type="password" id="passwordConfirmation" name="passwordConfirmation" value="">
											<% if(errors.passwordConfirmation){ %>
											  <span class="help-block"><%= errors.passwordConfirmation.message %></span>
											<% } %>

										</div>

										<p>
										  <small>*Required</small>
										</p>

									</div>
									
									<div class="form-group text-right m-b-0">
									<div class="buttons">
										<button type="submit" class="btn btn-primary waves-effect waves-light" >
											Register
										</button>
									</div>
									</div>
								
								</div>
								
								
								<% if(errors.unhandled){ %>
								  <div class="alert alert-danger">
									<%= errors.unhandled.message %>
								  </div>
								<% } %>
							
						</form>
					</div>
				
			</div>	
		</div>
	</div>
	
	<div class="col-lg-3">
		<span></span>
	</div>

  </body>
</html>
