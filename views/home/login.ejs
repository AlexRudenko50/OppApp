<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

	<div class="content">

	<div class="col-lg-3">
		<span></span>
	</div>

    <div class="col-lg-6">
		<div class="container">
			<div class="card-box">
				<form class="user-form form-horizontal-center" action="/login" method="post">
						<div class="container-center-login">
							<h4 class="m-t-0 header-title"><b>Log in and get to work</b></h4>
						</div>

						<div class="container-center-login">
							<div class="card-box">
								<div class="form-group <%= (errors.email)?'has-error':'' %>">
									<label style="color:#333333" for="email">Email</label>
									<input class="form-control" type="text" id="email" name="email" value="<%= email %>">
									<% if(errors.email){ %>
									  <span class="help-block"><%= errors.email %></span>
									<% } %>
								</div>

								<div class="form-group <%= (errors.password)?'has-error':'' %>">
									<label style="color:#333333" for="password" >Password</label>
									<input class="form-control" type="password" id="password" name="password" value="">
									<% if(errors.password){ %>
									  <span class="help-block"><%= errors.password %></span>
									<% } %>
								</div>

								<% if(errors.login){ %>
								  <div class="has-error">
									<span class="help-block"><%= errors.login %></span>
								  </div>
								<% } %>
							</div>

							<div class="form-group text-right m-b-0">
								<div class="buttons">
									<button type="submit" class="btn btn-primary waves-effect waves-light" >
										Login
									</button>
								</div>
							</div>
						</div>
				</form>
			</div>
		</div>
    </div> <!-- container end -->

	<div class="col-lg-3">
		<span></span>
	</div>
	</div>
  </body>
</html>
